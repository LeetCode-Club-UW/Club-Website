---
import "@fontsource/roboto-mono";
import "@fontsource/open-sans";
import { SOCIAL_LINKS, MAILCHIMP_URL } from "../config/links";
---

<style>
  * {
    font-family: "Open Sans", sans-serif;
  }
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-top: 5px solid var(--red);
    background-image: radial-gradient(rgb(235, 235, 235) 2px, white 0);
    background-size: 20px 20px;
    margin-top: 50px;
    padding: 30px 20% 50px;
  }
  .logo {
    height: 60px;
  }
  h2 {
    margin-top: 30px;
  }
  .form {
    display: flex;
  }
  .form * {
    margin: 0 5px;
  }
  .form button {
    padding: 8px 15px;
    color: white;
    background-color: var(--red);
    border: none;
    border-radius: 4px;
    font-weight: bold;
    font-size: 20px;
    transition: color 0.2s;
    cursor: pointer;
  }
  .form button:hover {
    color: rgba(255, 255, 255, .5);
  }
  .form input {
    padding: 5px 10px;
    border: 1px solid var(--gray);
    border-radius: 4px;
    width: 250px;
  }
  .social-links {
    /*margin-top: 20px;*/
  }
  .social-links a {
    text-decoration: none;
  }
  .social-links img {
    height: 40px;
    margin: 30px 10px 0;
    transition: opacity 0.2s;
  }
  .social-links img:hover {
    opacity: .5;
  }
  @media (max-width: 800px) {
    .container {
      margin-top: 30px;
    }
    .logo {
      display: none;
    }
  }
</style>

<div class="container">
  <img class="logo" src="/logo.svg" alt="LeetCode Club Logo" />
  <h2>Join our Mailing List!</h2>
  <form class="form" action={MAILCHIMP_URL} method="post" target="_blank">
    <input type="email" name="EMAIL" placeholder="Your email..." />
    <button type="submit">Submit</button>
  </form>
  <div class="social-links">
    {SOCIAL_LINKS.map(link => (
      <a href={link.href} target="_blank">
        <img src={link.iconUrl} alt={`${link.name} icon`} />
      </a>
    ))}
  </div>
</div>