---
import { LessonType } from "../../config/lessons";

type Props = {
  item: LessonType;
} 

const { item } = Astro.props;
const dateString = item.date.toLocaleString('en-US', { dateStyle: "medium" });
---

<style>
  .item-container {
    flex-shrink: 0;
    background-color: var(--light-gray);
    border-radius: var(--box-border-radius);
    width: 300px;
    padding: 15px;
    margin-right: 20px;
  }
  p {
    margin: 0;
  }
  .title {
    font-family: "Roboto Mono", monospace;
		font-size: 20px;
  }
  .date {
    font-style: italic;
  }
  .date, .description {
    margin-bottom: 10px;
  }
  .links a {
    color: black;
  }
</style>

<div class="item-container">
  <p class="title">{item.title}</p>
  <p class="date">{dateString}</p>
  <p class="description">{item.description}</p>
  <p class="links"><a href={item.recordingUrl} target="_blank">Recording</a> Â· <a href={item.resourcesUrl} target="_blank">Other Resources</a></p>
</div>