---
import { COMPANIES } from "../config/members";

---

<style>
  .container {
    position: relative;
    margin-bottom: 20px;
    padding: 50px 0 0;
    background-color: var(--light-gray);
    border-radius: var(--box-border-radius);
  }
  .overlay {
    position: absolute;
    inset: 0;
    box-shadow: 0px 0px 15px 10px var(--light-gray) inset;
    z-index: 10;
    border-radius: var(--box-border-radius);
  }
  .label {
    position: absolute;
    top: 0;
    z-index: 20;
    width: 100%;
    text-align: center;
  }

  .companies-container {
    height: 40px; 
    position: relative; 
    overflow: hidden;
  }
  .companies {
    position: absolute; 
    top: 0px; 
    left: 0px; 
    overflow: hidden; 
    white-space: nowrap;
    animation: bannermove 10s linear infinite;
  }
  @keyframes bannermove {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(-50%, 0);
    }
  }

  .company-img {
    filter: brightness(0) opacity(.75);
    height: 40px;
    max-width: 150px;
    margin: 0 10px;
    object-fit: contain;
  }
</style>

<div class="container">
  <div class="overlay"></div>
  <p class="label">Our team has received offers from...</p>
  <div class="companies-container">
    <div class="companies">
      {[...Array(2)].map(_ => COMPANIES.map(c => (
        <img class="company-img" src={c.photo} alt={`${c.name} logo`} />
      )))}
    </div>
  </div>
  <img />
</div>